<%= form_tag posts_path, method: :get do %> 
    <%= label_tag "search for content:"%> 
     <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search" %>
<% end %>

<h1>Posts#index</h1>
<h2><%= Post.self_method %></h2>

<table>
  <thead>
    <tr>
      <th>S.No.</th>
      <th>Post ID</th>
      <th>Posts</th>
      <th> Ternary Operator </th>
      <th>called model method </th>
      <th> using helper </th>
      <th>using concern</th>
      <th colspan="2">Action</th>
    </tr>
  </thead>

  <tbody>
	  <% @posts.each do |i| %>
    <tr>
    	<td><%= @posts.index(i) + 1 %></td>
      <td><%= i.id%></td>
      <td><%= link_to i.content, post_path(i) %></td>
      <td><%= i.content.length < 7 ? "< 7 " : " > 7 "%></td>
      <td><%= i.call_method %></td>     <%# instance method call hui he model ke through %>
      <td><%= calculation(i) %></td>
      <td><%= i.created_time %></td>

      <td><%= link_to 'Edit', edit_post_path(i)%></td>
      <td><%= link_to 'Delete', post_path(i), method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
	   <% end %>

     <%= "chocolate".size > 4 ? "More than four characters" : "Less than four characters"%>
  </tbody>
</table>