<%= form_with(model: [abc, abc.comments.new]) do |form| %>
<div>
  <%= form.label :commenter %>
  <%= form.text_field :commenter, required: true, autofocus: true %>
</div>
<div>
	<%= form.label :body %>
	<%= form.text_field :body,  placeholder: 'Enter Comment Here' %>
</div>
<div>
	<%= form.submit %>
</div>
<% end %>